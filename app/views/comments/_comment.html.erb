<div class="row">
    <div class="col-xs-12">
        <div class="col-lg-12 col-lg-offset-0 well">            
            
            <div class="comment"> 
              
                    <%= render 'shared/avatar', user: comment.user %> 
                        <%= link_to comment.user do %>
                            <%= comment.user.name %> 
                        <% end %> <%= time_ago_in_words(comment.created_at) %> ago
                  <p class="ment-content"><%= comment.content %></p>  
                  
                    <div class="links">
                        <% if user_signed_in? %>
                            <% if comment.user == current_user %>
                                    <%= link_to "Edit", edit_post_comment_path(comment.post, comment) %> |

                                    <%= link_to "Delete", post_comment_path(comment.post, comment), method: :delete, data: {confirm: "Are you sure you want to delete your comment?"} %>
                                    
                            <% end %>
                        <% end %>
                    </div>
            </div>
        </div>
    </div>
</div>

