        <div class="form-group">
          <h4 style="color:purple;font-weight: bold;"><%= f.label :Add_a_Profile_Picture %></h4>
        
          <%= render 'shared/avatar' , user: @user %>
          <br>
          <br>
          <%= f.file_field :avatar, class: 'form-control input-mentionable'%>
            <% if @user.avatar? %>
                  <br>
                    <%= f.check_box :remove_avatar %>
                      Remove Avatar
            <% end %>
          
        </div>
        <div class="form-group">
          <h4><%= f.label :Add_a_Cover_Picture %></h4>
          <br>
          <br>
          <br>
          
          <%= render 'shared/cover', user: @user %>
          <br>
          <br>
          <%= f.file_field :cover, class: 'form-control input-mentionable' %>
          <% if @user.cover? %>
            <br>
                    <%= f.check_box :remove_cover %>
                      Remove Cover Picture
          <% end %>
        </div>
  </div>
