    <style>
        body {
            background: linear-gradient( 
                rgba(0,0,0, 0.4),
                rgba(0,0,0, 0.4)
                ), url("/star.jpg") 
            
            
        }
        h3 {
            color: purple;
            font-weight: bold;
        }

        
        
        h5 {
          color: black;
            
        }
        h6 {
          color: blue;
            
        }
        td{
          color: white;
            
        }
      
     
    </style>
<div id="forgot-password-form" class="row tw-form">
  <div class="col-lg-6 col-lg-offset-3">
        <center>
          <p style="color:white;font-weight: bold;">
                                  Forgot Your Password?
          </p>
        </center>
      <div class="row">
        <div class="col-lg-8 col-lg-offset-1">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <div class="form-group">
              <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter email to recover your account" %>
            </div>
            <div class="form-group">
              <center>
                <%= f.submit "Reset Password", class: "btn btn-primary" %>
              </center>
            </div>
            <%= render 'shared/devise_form_errors' %>
          <% end %>
        </div>
      </div>
  </div>
</div>
